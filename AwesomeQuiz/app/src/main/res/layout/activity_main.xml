<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#720d5d"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:textFontWeight="100"
       android:text="My Awesome Quiz"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="#ffffff"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="30dp"
       android:textSize="35sp"/>

    <TextView
        android:id="@+id/textview_highscore"
        android:text="HighScore :"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_start_quiz"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btn_start_quiz"
        android:background="#ffffff"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:text="Start Quiz"
        android:padding="10dp"
        android:textColor="#720d5d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spinner_difficulty"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_start_quiz"
        android:layout_alignStart="@+id/btn_start_quiz"
        android:layout_alignLeft="@+id/btn_start_quiz"
        android:layout_marginTop="16dp"
        android:popupBackground="#ffffff"
        />

</RelativeLayout>